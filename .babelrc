{
  "plugins": [
    "transform-class-properties",
    ["@babel/plugin-proposal-decorators", {
      "legacy": true
    }],
    ["wildcard", {
      "exts" : ["html", "json"],
      "noModifyCase" : true
    }],
    ["react-intl", {
        "messagesDir": "./source/translations/extractedMessages"
    }]
  ],
  "presets": [
    "@babel/preset-env",
    "@babel/preset-react"
  ],
  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "production": {
      "presets": ["react-optimize"]
    }
  }
}
