{
  "plugins": [
    "transform-class-properties",
    "syntax-decorators",
    "transform-decorators-legacy",
    ["wildcard", {
      "exts" : ["html", "json"],
      "noModifyCase" : true
    }]
  ],
  "presets": [
    ["es2015", { "modules": false }],
    "stage-0",
    "react"
  ],
  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "production": {
      "presets": ["react-optimize"]
    }
  }
}
